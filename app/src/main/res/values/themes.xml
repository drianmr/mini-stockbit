<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MiniStockbit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- <item name="colorSecondary">@color/teal_200</item>-->
        <!-- <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!-- <item name="colorOnSecondary">@color/black</item>-->

        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Medium.Regular</item>
    </style>

    <style name="Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0</item>
    </style>

    <style name="Widget.Button.Outlined.Brand" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Medium.Regular</item>
        <item name="strokeColor">@color/brand</item>
    </style>

    <style name="Widget.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Medium.Regular</item>
    </style>

    <style name="Widget.Button.Text.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Medium.Small</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/TextAppearance.Regular.Small</item>
    </style>

    <style name="Widget.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Regular.Regular</item>
    </style>

</resources>